<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/om_tags_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <co.yishun.library.VideoSquareContainer
            android:id="@+id/om_video_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <SurfaceView
                android:id="@+id/om_video_surface"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <ImageView
                android:id="@+id/om_play_btn"
                android:layout_width="53dp"
                android:layout_height="53dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_play"/>

        </co.yishun.library.VideoSquareContainer>

        <LinearLayout
            android:id="@+id/om_heads_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/om_video_container"
            android:orientation="horizontal">

        </LinearLayout>
    </RelativeLayout>
</merge>
